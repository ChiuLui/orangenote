<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color_bg_main">@color/color_bg_main_light</item>
        <item name="color_bg_item">@color/color_bg_item_light</item>
        <item name="color_text_title">@color/color_text_title_light</item>
        <item name="color_text_content">@color/color_text_content_light</item>
        <item name="color_text_time">@color/color_text_time_light</item>
        <item name="color_toolbar_title">@color/color_toolbar_title_light</item>
    </style>

    <style name="ThemeLight" parent="AppTheme">

    </style>

    <style name="ThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_Dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_Dark</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>
        <item name="color_bg_main">@color/color_bg_main_Dark</item>
        <item name="color_bg_item">@color/color_bg_item_Dark</item>
        <item name="color_text_title">@color/color_text_title_Dark</item>
        <item name="color_text_content">@color/color_text_content_Dark</item>
        <item name="color_text_time">@color/color_text_time_Dark</item>
        <item name="color_toolbar_title">@color/color_toolbar_title_Dark</item>
    </style>


    <style name="AlertDialog_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:windowBackground">@color/color_bg_main_light</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/color_bg_main_light</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@color/color_bg_item_light</item>
    </style>

    <style name="AlertDialog_Dark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 这里设置背景为透明，为了隐藏边框 -->
        <item name="android:windowBackground">@color/color_bg_main_Dark</item>
        <!-- 这里是修改顶部标题背景颜色，具体颜色自己定，可以是图片 -->
        <item name="android:topDark">@color/color_bg_main_Dark</item>
        <!-- 这里是修改内容区域背景颜色 -->
        <item name="android:centerDark">@color/color_bg_item_Dark</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>
